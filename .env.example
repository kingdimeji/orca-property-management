# Database Configuration
# For production, use a hosted PostgreSQL database (e.g., Vercel Postgres, Neon, Supabase)
DATABASE_URL="postgres://username:password@host:port/database?sslmode=require"

# NextAuth Configuration
# Set this to your production URL (e.g., https://orca-property.vercel.app)
NEXTAUTH_URL="https://your-production-url.vercel.app"

# NextAuth Secret
# Generate a secure random string for production
# You can generate one with: openssl rand -base64 32
NEXTAUTH_SECRET="your-production-secret-key-change-this"

# Cron Job Secret
# Generate a secure random string for authenticating cron jobs
# You can generate one with: openssl rand -base64 32
CRON_SECRET="your-cron-secret-key-change-this"

# Environment
NODE_ENV="production"

# Paystack Configuration
# Get your API keys from https://dashboard.paystack.com/settings/developer
# For development, use test keys (sk_test_xxx, pk_test_xxx)
# For production, use live keys (sk_live_xxx, pk_live_xxx)
PAYSTACK_SECRET_KEY="sk_test_your-secret-key-here"
PAYSTACK_PUBLIC_KEY="pk_test_your-public-key-here"

# Email Configuration (Resend)
# Get your API key from https://resend.com/api-keys
# For development, you can use the same key as production
RESEND_API_KEY="re_your-resend-api-key-here"

# Email sender address (must be verified in Resend)
# For development, you can use onboarding@resend.dev
# For production, use your own verified domain (e.g., noreply@yourdomain.com)
EMAIL_FROM="onboarding@resend.dev"
